<% provide(:title, 'Lista de Departamentos') %>
<h3>Calendarios</h3>
	
<p> <%= link_to "Nuevo Calendario!", new_calendar_path, class: "btn btn-medium btn-primary" %> </p>
<div class="row">
<div class="span6">
	<table class="table table-hover table-striped">
