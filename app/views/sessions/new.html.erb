<% provide(:title, "Autentificarse") %>

<h1>Autentifiquese! </h1>



<div class="row">
	<div class="span6 offset3">
		<%= form_for(:session, url: sessions_path) do |f| %>
			
			<%= f.label :email %>
			<%= f.text_field :email %>

			<%= f.label :password %>
			<%= f.password_field :password %>

			<%= f.submit "Autentificarse", class:"btn btn-large btn-primary" %>
		<% end %>
		<p> No esta registrado? <%= link_to "Registrese ahora!", signup_path %> </p>
	</div>
</div>