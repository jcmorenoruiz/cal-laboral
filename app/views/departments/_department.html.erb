<tr>
		<td><%= department.nombre %></td>
		<td>
			<%= link_to department.employees.where(status: 't').count,
				employees_path(department: department.id, status: 't') %>
		</td>
		<td>
			<%= link_to department.employees.where(status: 'f').count,
				employees_path(department: department.id, status: 'f') %>
		</td>

		<td><%= link_to 'Disponibilidad', department_path(department), :class =>"btn btn-small btn-primary" %></td>											


		<td>
		<%= link_to 'Editar',[:edit,department], :class =>"btn btn-small btn-warning" %>

		<%= link_to "Dar de Baja", department, method: :delete, data: { confirm: "Esta seguro?" }, :class => "btn btn-small btn-danger" %>
		 </td>

</tr>
	