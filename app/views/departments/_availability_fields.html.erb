<div id="new-availability-fields" class="modal fade" data-backdrop="static">
	<div class="modal-header">
		<button type="button" class="close" data-dismiss="modal" aria-hidden="true">x</button>
		<h3>Agregar Disponibilidad <%= " al departamento #{@dpto.nombre} " unless @dpto.nombre.nil? %></h3>
	</div>

	<div class="modal-body">
		<fieldset>

			<div class="control-group">
				<%= f.label :cargo, "Cargo", :class => "control-label" %>
				<div class="controls">
					<%= f.text_field(:cargo, :class=> "input-large field") %>	
				</div>
			</div>

			<div class="control-group">
				<%= f.label :num_min_emp, "Nº mínimo de Empleados disponibles", :class => "control-label" %>
				<div class="controls">
					<%= f.text_field(:num_min_emp, :class=> "input-small field") %>	
				</div>
			</div>

			<div class="control-group">
				<%= f.label :desde, "Desde", :class => "control-label" %>
				<div class="controls">
					<%= f.text_field(:desde,  :class => 'datepicker') %>	
				</div>
			</div>

			<div class="control-group">
				<%= f.label :hasta, "Hasta", :class => "control-label" %>
				<div class="controls">
					<%= f.text_field(:hasta, :class=> "datepicker input-large") %>	
				</div>
			</div>

			<div class="control-group">
				<%= f.label :notas, "Notas", :class => "control-label" %>
				<div class="controls">
					<%= f.text_area(:notas, :class=> "input-xlarge field") %>	
				</div>
			</div>

			    <%= f.hidden_field(:_destroy, :class => "field") %>
		</fieldset>
	</div>

	<div class="modal-footer">

		<button id="addButton" type="button" class="btn btn-primary" data-dismiss="modal" aria-hidden="true" title="Añadir Disponibilidad a este Departamento" >Guardar</button>
		<button id="cancelButton" type="button" class="btn btn-inverse" data-dismiss="modal" aria-hidden="true" title="Cerrar sin añadir el periodo de disponibilidad al Departamento actual">Cancelar </button>

	</div>
</div>

<script type="text/javascript">
  availabilityFieldsUI.init();
</script>