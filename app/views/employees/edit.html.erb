<h1>Modificar sus datos</h1>


<div class="row">
	<div class="span6 offset3">
		<%= form_for(@emp) do |f| %>

			<%= render 'shared/error_messages' %>
			
			<%= f.label :name %>
			<%= f.text_field :name %>

			<%= f.label :email %>
			<%= f.text_field :email %>

			<%= f.label :password %>
			<%= f.password_field :password %>

			<%= f.label :password_confirmation, "Confirmar password" %>
			<%= f.password_field :password_confirmation %>
			<p>
			<%= f.submit "Actualizar", class:"btn btn-large btn-primary" %>
			</p>
		<% end %>


		<%= gravatar_for @emp %>
		<a href="http://gravatar.com/emails">Modificar</a>

	</div>
</div>