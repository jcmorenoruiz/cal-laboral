<h1>Modificar sus datos</h1>


<div class="row">
	<div class="span6 offset3">
		<%= form_for(@emp) do |f| %>

			<%= render 'shared/error_messages' %>
			
			<%= f.label :nombre %>
			<%= f.text_field :nombre %>

			<%= f.label :email %>
			<%= f.text_field :email %>

			<% if admin_user? %>
				<%= f.label :fecha_alta, "Fecha de alta" %>
				<%= f.text_field :fecha_alta, :class => 'datepicker' %>
				
				<%= f.label :role, "Tipo de Usuario" %>
				<%= f.select :role, options_for_select({ "Empleado" => 1,"Jefe Departamento" => 2, "Administrador" => 3},@emp.role) %>

				<%= f.label :cargo %>
				<%= f.text_field :cargo %>

			<% end %>	
			<%= f.label :password %>
			<%= f.password_field :password %>

			<%= f.label :password_confirmation, "Confirmar password" %>
			<%= f.password_field :password_confirmation %>
			
		<p><%= f.submit "Actualizar", class:"btn btn-large btn-primary" %></p>

		<% end %>

	</div>
</div>